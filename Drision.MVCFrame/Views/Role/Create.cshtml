@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>角色信息</legend>
        <div class="editor-label">
            角色名称：
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName)
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>
        <div class="editor-label">
            角色描述：
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleDescription)
            @Html.ValidationMessageFor(model => model.RoleDescription)
        </div>
        <div class="editor-label">
            排序：
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleOrder)
            @Html.ValidationMessageFor(model => model.RoleOrder)
        </div>
        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("返回角色列表", "Index")
</div>
