@model Drision.MVCFrame.Models.SysRole
@{
    ViewBag.Title = "角色编辑";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    角色编辑</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>角色信息</legend>
        @Html.HiddenFor(model => model.ID)
        <div class="editor-label">
            角色名称：
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName)
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>
        <div class="editor-label">
            角色描述：
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleDescription)
            @Html.ValidationMessageFor(model => model.RoleDescription)
        </div>
        <div class="editor-label">
            排序：
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleOrder)
            @Html.ValidationMessageFor(model => model.RoleOrder)
        </div>
        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
