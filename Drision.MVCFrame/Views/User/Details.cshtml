@model Drision.MVCFrame.Models.BaseUser
@{
    ViewBag.Title = "用户详情";
}
<div class="row-fluid">
    <ul class="breadcrumb">
        <li><a href="#">首页</a> <span class="divider">/</span></li>
        <li><a href="User/Search">用户信息</a> <span class="divider">/</span></li>
        <li class="active">个人信息</li>
    </ul>
</div>
<div class="row-fluid show-grid">
    <fieldset>
        <legend>用户详情</legend>
        <label>
            用户名</label>
        <span class="input-xlarge uneditable-input">@Html.DisplayFor(model => model.UserName)</span>
        <label>
            昵称</label>
        <span class="input-xlarge uneditable-input">@Html.DisplayFor(model => model.NickName)</span>
        <label>
            邮件</label>
        <span class="input-xlarge uneditable-input">@Html.DisplayFor(model => model.Email)</span>
        <label>
            创建时间</label>
        <span class="input-xlarge uneditable-input">@Html.DisplayFor(model => model.CreateTime)</span>
        <label>
            最近登陆时间</label>
        <span class="input-xlarge uneditable-input">@Html.DisplayFor(model => model.LastLoginTime)</span>
    </fieldset>
    <a href="/User/Edit/@Model.ID" class="btn btn-small btn-info"  ><i class="icon-edit icon-white">
    </i>编辑</a>
</div>
